<h1>Todos#index</h1>
<p>Find me in app/views/todos/index.html.erb</p>



<% @todos.each do |task| %>
	<p><%= task %></p>
	<% end %>


<!-- form -->

  <%= form_tag(todos_path) do %>
     <p>
      <%= label_tag(:task) %>
      <%= text_field_tag(:task, nil, autofocus: true) %>
    </p>
     <%= submit_tag "Add"%>
	<% end %>

	<%= button_to "delete", todos_path, :method => :delete %>